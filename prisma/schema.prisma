generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  MASTER_ADMIN
  TEAM_LEAD
  DELIVERY
}

enum DietType {
  VEG
  NON_VEG
  JAIN
  VEGAN
}

enum SpiceLevel {
  MILD
  MEDIUM
  SPICY
}

enum PlanDuration {
  MONTHLY
  WEEKLY
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum OrderStatus {
  PREPARING
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  phone     String?  @unique
  password  String   // Hashed
  address   String?
  role      Role     @default(USER)
  isApproved Boolean @default(true) // Default true for customers, false for admins
  referralCode String? @unique
  referredBy   String? // Store the referral code of the inviter
  walletBalance Float @default(0.0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  preferences   Preferences?
  subscriptions Subscription[]
  orders        Order[]
  payments      Payment[]
  pauseRequests PauseRequest[]
  feedbacks     Feedback[]
}

model Preferences {
  id          String     @id @default(uuid())
  userId      String     @unique
  dietType    DietType   @default(VEG)
  spiceLevel  SpiceLevel @default(MEDIUM)
  allergens   String[]
  user        User       @relation(fields: [userId], references: [id])
}

model Subscription {
  id        String             @id @default(uuid())
  userId    String
  user      User               @relation(fields: [userId], references: [id])
  planType  PlanDuration       @default(MONTHLY)
  startDate DateTime
  endDate   DateTime
  status    SubscriptionStatus @default(ACTIVE)
  createdAt DateTime           @default(now())
}

model Menu {
  id          String   @id @default(uuid())
  date        DateTime @unique
  items       Json
  nutrition   Json?    // { calories: 500, protein: 20, carbs: 60 }
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id           String      @id @default(uuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  date         DateTime    @default(now())
  status       OrderStatus @default(PREPARING)
  deliveryTime DateTime?
  items        Json?
}

model Payment {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  amount        Float
  currency      String   @default("INR")
  status        String
  transactionId String?
  createdAt     DateTime @default(now())
}

model PauseRequest {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  startDate DateTime
  endDate   DateTime
  status    String   @default("APPROVED") // Auto-approve for now
  createdAt DateTime @default(now())
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}
